<Page x:Class="WPFBestCoffee.CoffeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFBestCoffee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoffeePage">   
    <Grid>
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
        <RowDefinition Height="75"/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>

    <TextBlock Text="GreatCoffee"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="#e4bcbc"
                       FontSize="22"
                       Margin="20,0,0,0"/>
    <StackPanel Grid.Row="1" Grid.RowSpan="3">
        <Button Content="Рецепты"
                             Height="50"
                             Foreground="#e4bcbc"
                             Background="#51382a"
                             FontSize="14" Click="BtnRecipes_Click"/>
        <Button Content="Любимые"
                             Height="50"
                             Foreground="#e4bcbc"
                             Background="#412814"/>
        <Button Content="История"
                             Height="50"
                             Foreground="#e4bcbc"
                             Background="#51382a"
                             FontSize="14" Click="BtnHistory_Click"/>
    </StackPanel>
        <TextBox x:Name="TBoxSearch"
                Width="250"
                 Height="40"
                 VerticalContentAlignment="Center" 
                 HorizontalAlignment="Left"
                 Margin="5"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"/>
        <TextBlock x:Name="tb_name" Grid.Column="1" Grid.Row="1" PreviewTextInput="tb_name_PreviewTextInput"/>
        <TextBox x:Name="tb_ingredients" Grid.Column="1" Grid.Row="3" PreviewTextInput="tb_name_PreviewTextInput" Margin="5" Grid.RowSpan="3"/>
        <TextBox x:Name="tb_instructions" Grid.Column="2" Grid.Row="3" PreviewTextInput="tb_name_PreviewTextInput" Margin="5" Grid.RowSpan="3"/>
        <Image Source="/image/like.png" Grid.Column="3" Grid.Row="6" HorizontalAlignment="Left" Width="30" Height="30" MouseLeftButtonDown="Image_MouseLeftButtonDown" />
    </Grid>
</Page>
